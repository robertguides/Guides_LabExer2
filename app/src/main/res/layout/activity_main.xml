<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guides.labexer2.MainActivity"
    android:background="@drawable/wow">

    <TextView
        android:textSize="10pt"
        android:id="@+id/TXT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/BTN3"
        android:layout_marginEnd="21dp" />
    <TextView
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignStart="@+id/TXT1" />
    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/TXT1"
        android:layout_alignStart="@+id/editText2" />
    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/TXT1"
        android:layout_alignStart="@+id/BTN3" />
    <Button
        android:text="Shared Preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTN1"
        android:onClick="savePreferences"
        android:layout_above="@+id/BTN2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />
    <Button
        android:onClick="saveStorage"
        android:text="Internal Storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTN2"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/BTN3"
        android:layout_alignParentStart="true" />
    <Button
        android:onClick="Next"
        android:text="Next"
        android:id="@+id/BTN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
